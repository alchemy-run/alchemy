{
  "extends": "../tsconfig.base.json",
  "include": ["package.json", "src/**/*.ts", "src/**/*.js", "src/**/*.tsx"],
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "composite": true,
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    // ink
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ES2023"]
  }
}
