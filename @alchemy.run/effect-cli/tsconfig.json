{
  "extends": "../../tsconfig.base.json",
  "include": ["package.json", "src/**/*.ts", "src/**/*.js", "src/**/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    // ink
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  },

  "references": [
    { "path": "../../alchemy/tsconfig.json" },
    { "path": "../effect/tsconfig.json" }
  ]
}
