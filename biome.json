{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "./**/biome.json",
      "./**/package.json",
      "./@alchemy.run/**/*.ts",
      "./alchemy-web/**/*.js",
      "./alchemy-web/**/*.mjs",
      "./alchemy-web/**/*.ts",
      "./alchemy/bin/**/*.ts",
      "./alchemy/scripts/**/*.ts",
      "./alchemy/src/**/*.js",
      "./alchemy/src/**/*.ts",
      "./alchemy/src/**/*.tsx",
      "./alchemy/test/**/*.ts",
      "./alchemy/workers/**/*.ts",
      "./examples/*/*.ts",
      "./examples/*/src/**/*.ts",
      "./examples/*/test/**/*.ts",
      "./scripts/**/*.ts",
      "./src/**/*.ts",
      "./stacks/**/*.ts",
      "./tests/*/**/*.ts",
      "alchemy/src/{neon,planetscale}/api/*.ts",
      "alchemy/src/planetscale/api/*.ts",
      "monorepo/**/*.json",
      "monorepo/**/*.ts",
      "monorepo/**/*.tsx",
      "!./alchemy/lib/",
      "!./alchemy/lib/",
      "!./alchemy/src/aws/control/types.ts",
      "!./alchemy/src/aws/control/types.ts",
      "!**/*.gen.ts",
      "!**/*.gen.ts",
      "!**/node_modules",
      "!**/node_modules",
      "!examples/cloudflare-nuxt-pipeline/.output/",
      "!examples/cloudflare-redwood/worker-configuration.d.ts",
      "!examples/cloudflare-tanstack-start/.output/",
      "!examples/cloudflare-tanstack-start/src/routeTree.gen.ts"
    ],
    "experimentalScannerIgnores": ["!**/node_modules", "./alchemy/lib/**"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useImportExtensions": {
          "level": "error",
          "options": {
            "forceJsExtensions": false
          }
        },
        "noUnsafeFinally": "off",
        "noChildrenProp": "off",
        "useYield": "off",
        "noConstructorReturn": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "useHtmlLang": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noCommaOperator": "off",
        "noStaticOnlyClass": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off",
        "noEmptyInterface": "off",
        "noRedeclare": "off",
        "noControlCharactersInRegex": "off",
        "noConfusingVoidType": "off"
      },
      "style": {
        "useLiteralEnumMembers": "error",
        "useNodejsImportProtocol": "error",
        "useAsConstAssertion": "error",
        "useEnumInitializers": "error",
        "useSelfClosingElements": "error",
        "useConst": "off",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNumberNamespace": "error",
        "noInferrableTypes": "error",
        "useExponentiationOperator": "error",
        "useTemplate": "error",
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "useDefaultParameterLast": "error",
        "useImportType": "error",
        "useExportType": "error",
        "noUselessElse": "off",
        "useShorthandFunctionType": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "picocolors": {
                "allowImportNames": ["default"],
                "message": "picocolors is a CJS module, import default module as 'pc'"
              }
            }
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "includes": ["**", "!**/node_modules/**", "!**/*.d.ts", "!**/*.mdx"]
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space"
    }
  }
}
